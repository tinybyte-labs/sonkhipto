{
  "name": "sonkhipto",
  "private": true,
  "scripts": {
    "build": "pnpm db:generate && pnpm db:push && turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "studio": "pnpm -F @acme/db studio",
    "db:studio": "pnpm -F @acme/db studio",
    "db:migrate": "pnpm -F @acme/db migrate",
    "db:generate": "pnpm -F @acme/db generate",
    "db:push": "pnpm -F @acme/db push",
    "server:start": "pnpm -F @acme/server start",
    "ios": "pnpm -F @acme/mobile ios",
    "android": "pnpm -F @acme/mobile android",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down"
  },
  "devDependencies": {
    "@acme/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "turbo": "^1.12.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
